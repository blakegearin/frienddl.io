{
  "name": "frienddlio",
  "version": "0.0.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Frienddlio"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/jquery-3.5.1.min.js",
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "icons": {
    "16": "img/favicon.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
